@import '_skeleton'
@import '_syntax-highlighting'

// code styling
.container
  margin-top 20px

figure 
  border-radius 5px
  border-left 5px solid dodgerblue
  padding-left 1.8rem

.page-heading
.post-title
  font-family serif

.footer-heading
  font-size 2rem
  font-variant small-caps
  color rgba(0,0,0,.35)

a
  text-decoration none
  font-weight 600

h2 a
  font-size 2.8rem
  font-weight 500

li
  font-weight 500

.site-nav
  display flex
  justify-content space-between
  margin-bottom 1.5rem

.site-title
  color #3E3E3E

.page-link
  color #3E3E3E
  text-transform uppercase